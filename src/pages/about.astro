---
import Sectionhead from "../components/sectionhead.astro";
import Layout from "../layouts/Layout.astro";
import Container from "../components/container.astro";
import LinksIcon from "../components/LinksIcon.astro";
import { outerProfilLinks } from "../../config/config";
---

<Layout title="Portfolio">
  <Container>
    <Sectionhead>
      <Fragment slot="title">About me</Fragment>
      <Fragment slot="desc"></Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">Developer</h2>
      <p class="text-lg leading-relaxed text-slate-500">
        Developer skilled in frontend and backend development, specializing in
        Geographic Information Systems. Creates user-friendly interfaces and
        robust backend systems to analyze and visualize spatial data
        efficiently.
      </p>

      <LinksIcon items={outerProfilLinks} />
    </div>
  </Container>
</Layout>
