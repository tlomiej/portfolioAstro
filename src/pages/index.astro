---
import { outerProfilLinks } from "../../config/config";
import Cards from "../components/Cards.astro";
import LinksIcon from "../components/LinksIcon.astro";
import SeasonalEffect from "../components/SeasonalEffect.astro";
import Sectionbody from "../components/sectionbody.astro";
import Sectionhead from "../components/sectionhead.astro";
import SnowEffect from '../components/SnowEffect.astro';
import Layout from "../layouts/Layout.astro";
import { mainInfos } from "./../../config/config";

const getRandomItem = () => {
  const randomIndex = Math.floor(Math.random() * mainInfos.length);
  return mainInfos[randomIndex];
};


const randomItemMainInfo = getRandomItem();

---

<SeasonalEffect>
  <SnowEffect />
</SeasonalEffect>

<Layout title="Portfolio">
  <Sectionhead>
    <Fragment slot="title">{randomItemMainInfo.title}</Fragment>
    <Fragment slot="desc">{randomItemMainInfo.desc}</Fragment>
  </Sectionhead>
  <LinksIcon items={outerProfilLinks} />
  <Sectionbody>
    <Cards slot="links" />
  </Sectionbody>
</Layout>

<style is:global>
  :root {
  }
  html {
    font-family: system-ui, sans-serif;
    background: whitesmoke;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
